{
  "compilerOptions": {
    "target": "es2015",
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "../node_modules/@types",
      "../@types",
      "src/types/index.d.ts"
    ],

    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "*": [
        "src/modules/*"
      ]
    },
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "/src",
    "src",
    "src/**/*.ts",
    "@types/**/*.d.ts"
  ]
}
